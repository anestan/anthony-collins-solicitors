/**
 * Event Tickets Plus - Attendee Registration Page Stylesheet
 *
 * @since 5.1.0
 */

 @import 'utilities/_all.pcss';

body.page-tribe-attendee-registration {

	* {
		-moz-osx-font-smoothing: grayscale;
		-webkit-font-smoothing: antialiased;
	}

	header.entry-header,
	header.entry-meta,
	header.page-header,
	footer.entry-header,
	span.edit-link {
		display: none;

		@media(--viewport-medium) {
			display: none;
		}
	}

	.entry-content,
	.entry-header {
		-moz-osx-font-smoothing: grayscale;
		-webkit-font-smoothing: antialiased;
		width: 98%;
	}

	.tribe-tickets__registration {
		padding: 0 var(--tec-spacer-4);

		@media(--viewport-medium) {
			margin: auto auto;
			max-width: 960px;
		}
	}

	/* -----------------------------------------------------------------------------
	 * Hide from screenreaders & browsers
	 * ----------------------------------------------------------------------------- */
	.tribe-common-a11y-hidden {
		@mixin hidden;
	}

	.tribe-common,
	.event-tickets {
		.tribe-events-single {
			max-width: 1000px;
			margin: 0 auto;
		}

		/*
			Tickets Registration/Purchase
		*/

		.tribe-tickets__registration-event {
			border-radius: 0;
			margin: var(--tec-spacer-8) auto var(--tec-spacer-7);
			max-width: 800px;
			width: 100%;

			@media(--viewport-full) {
				padding: 0 var(--tec-spacer-5) var(--tec-spacer-1) 0;
				margin: 0;
			}

			@media(min-width: 1440px) {
				max-width: 100%;
			}
		}

		.tribe-tickets__registration-actions {
			margin: var(--tec-spacer-7) auto var(--tec-spacer-1);

			@media(--viewport-medium) {
				margin: var(--tec-spacer-13) auto var(--tec-spacer-6);
			}
		}

		.tribe-tickets__registration-back-to-cart {
			color: var(--tec-color-text-primary);
			box-shadow: initial;
			border: 0;
			&:before {
				margin-right: var(--tec-spacer-0);
				content: svg-inline(arrow);
				vertical-align: baseline;
			}

			body.tribe-theme-twentyseventeen & {
				box-shadow: initial;
			}
		}

		.tribe-tickets__registration-page-title {
			margin: var(--tec-spacer-1) 0 var(--tec-spacer-5);
			padding: 0;

			@media(--viewport-medium) {
				margin: var(--tec-spacer-6) 0 var(--tec-spacer-7);
			}
		}

		.tribe-tickets__registration-grid {
			display: grid;
			-ms-grid-columns: auto;
			grid-template-columns: auto;
			-ms-grid-rows: auto;
			grid-template-rows: auto;

			@media(--viewport-full) {
				border-top: 1px solid var(--tec-color-border-secondary);
				-ms-grid-columns: calc(100% - 360px) 360px;
				grid-template-columns: calc(100% - 360px) 360px;
				padding-top: var(--tec-spacer-10);
			}
		}

		.tribe-tickets__validation-notice {
			display: none;
			-ms-grid-column: 1;
			grid-column: 1;
			-ms-grid-row: 2;
			grid-row: 2;

			@media(--viewport-full) {
				-ms-grid-column: 1;
				grid-column: 1;
				-ms-grid-row: 1;
				grid-row: 1;
				margin-right: var(--tec-spacer-5);
			}
		}

		.tribe-tickets__registration-content {
			-ms-grid-column: 1;
			grid-column: 1;
			-ms-grid-row: 3;
			grid-row: 3;

			@media(--viewport-full) {
				-ms-grid-column: 1;
				grid-column: 1;
				-ms-grid-row: 2;
				grid-row: 2;
			}
		}

		/* Mini-Cart Styles */
		.tribe-tickets__mini-cart {
			background-color: white;
			border-top:  1px solid var(--tec-color-border-secondary);
			-ms-grid-column: 1;
			grid-column: 1;
			-ms-grid-row: 1;
			grid-row: 1;
			margin: auto auto;
			max-width: 800px;
			padding-top: var(--tec-spacer-5);
			width: 100%;

			@media(--viewport-full) {
				align-self: baseline;
				border-radius: var(--tec-border-radius-default);
				border: 1px solid var(--tec-color-border-secondary);
				-ms-grid-column: 2;
				grid-column: 2;
				-ms-grid-row: 1;
				-ms-grid-row-span: 2;
				grid-row: 1/span 2;
				margin: 160px 0 var(--tec-spacer-5) 0;
				padding: var(--tec-spacer-5) var(--tec-spacer-3);
				position: sticky;
				top: var(--tec-spacer-5);
				width: 360px;
			}

			.tribe-tickets__tickets-footer-total,
			.tribe-tickets__tickets-footer-quantity {
				display: block;
			}

			/* AR override styles */
			.tribe-tickets__tickets-item {
				-ms-grid-columns: 6fr 1fr 2fr 2fr;
				grid-template-columns: 6fr 1fr 2fr 2fr;

				&.tribe-tickets__tickets-item--price-suffix {
					-ms-grid-columns: 4fr 3fr 2fr 2fr;
					grid-template-columns: 4fr 3fr 2fr 2fr;
				}
			}

			.tribe-tickets__tickets-item-extra {
				-ms-grid-row: 1;
				grid-row: 1;
				align-self: center;
			}

			.tribe-tickets__tickets-item-extra,
			.tribe-tickets__tickets-item-total-wrap {
				text-align: right;
			}

			.tribe-tickets__tickets-item-total-wrap {
				font-weight: var(--tec-font-weight-bold);
			}

			.tribe-ticket-quantity,
			.tribe-tickets__tickets-item-total,
			.tribe-tickets__tickets-item-extra-price {
				font-family: var(--tec-font-family-sans-serif);
				font-size: var(--tec-font-size-2);
				font-weight: var(--tec-font-weight-bold);

				@media(--viewport-medium) {
					font-size: var(--tec-font-size-2);
				}
			}

			.tribe-ticket-quantity {
				text-align: center;
			}

			.tribe-tickets__tickets-item-total {
				white-space: nowrap;
			}

			.tribe-tickets__tickets-item-content-subtitle {
				color: var(--tec-color-text-secondary);

				@media(--viewport-medium) {
					font-size: var(--tec-font-size-0);
				}
			}

			.tribe-tickets__tickets-footer {
				padding-top: var(--tec-spacer-5);
			}

			a.tribe-tickets__tickets-footer-back-link {
				box-shadow: none;
				color: var(--tec-color-text-secondary);
				display: none;
				margin-right: auto;
				box-shadow: inset 0 -1px 0 0 var(--tec-color-text-secondary);
				text-decoration: none;

				@media(--viewport-medium) {
					display: block;
				}

				&:visited {
					box-shadow: none;
					color: var(--tec-color-text-secondary);
				}

				&:active,
				&:focus,
				&:hover {
					color: var(--tec-color-text-primary);
					box-shadow: inset 0 -1px 0 0 var(--tec-color-text-primary);
				}
			}

			.tribe-tickets__tickets-footer-total,
			.tribe-tickets__tickets-footer-quantity {
				font-size: var(--tec-font-size-2);
			}

			.tribe-tickets__tickets-footer-total-label {
				display: none;
			}
		}

		.tribe-tickets__mini-cart-title {
			margin: 0 0 var(--tec-spacer-3) 0;

			@media(--viewport-medium) {
				border: 0;
			}
		}

		.tribe-tickets__registration-summary {
			margin-bottom: var(--tec-spacer-4);

			@media(--viewport-medium) {
				margin-bottom: var(--tec-spacer-7);
			}
		}

		.tribe-tickets__registration-description {
			margin: 0 0 var(--tec-spacer-1);
		}

		.tribe-tickets__registration-title {
			margin: 0;

			h2 {
				margin: 0;
			}

			a {
				box-shadow: none;
				text-decoration: none;

				&:active,
				&:focus,
				&:hover {
					box-shadow: inset 0 -2px 0 0 var(--tec-color-text-primary);
				}
			}
		}

		.tribe-ticket__tickets-heading {
			font-size: var(--tec-font-size-3);
			margin-bottom: var(--tec-spacer-3);

			@media(--viewport-medium) {
				font-size: var(--tec-font-size-4);
				margin-bottom: var(--tec-spacer-4);
			}
		}

		.tribe-tickets__attendee-tickets {
			margin: 0;
		}

		.tribe-tickets__attendee-tickets-item {
			padding-bottom: var(--tec-spacer-5);
			padding-top: 0;

			h4 {
				margin: var(--tec-spacer-3) 0 var(--tec-spacer-2);

				@media(--viewport-medium) {
					margin: var(--tec-spacer-3) 0;
				}
			}
		}

		.tribe-field {
			margin-top: var(--tec-spacer-2);

			@media(--viewport-medium) {
				margin-top: var(--tec-spacer-3);
			}
		}

		.tribe-tickets__registration-footer {
			display: flex;
			flex-flow: row wrap;
			justify-content: flex-end;
			margin-bottom: var(--tec-spacer-8);

			@media(--viewport-medium) {
				margin-bottom: var(--tec-spacer-13);
				max-width: calc(100% - 384px);
				width: 100%;
			}

			.tribe-tickets__notice.tribe-tickets__notice--non-ar {
				margin: 0 0 var(--tec-spacer-7);
				padding-bottom: var(--tec-spacer-5);
				width: 100%;

				@media(--viewport-medium) {
					margin-bottom: var(--tec-spacer-5);
				}
			}
		}
	}

	.tribe-common-c-loader {
		align-items: center;
		background-color: #fffc;
		bottom: 0;
		display: flex;
		justify-content: center;
		left: 0;
		position: fixed;
		right: 0;
		top: 0;
	}

	/* -------------------------------------------------------------------------
	 * Theme Overrides - Twenty twenty
	 * ------------------------------------------------------------------------- */

	&.tribe-theme-twentyseventeen {

		&.page.page-one-column {
			#primary {
				max-width: 100%;
			}
		}

		&.page-one-column,
		&.page-two-column {

			#primary .entry-content {
				float: initial;
				max-width: 960px !important;
				margin: auto auto;
				width: 100%;
			}
		}

		.tribe-common .tribe-tickets__mini-cart {
			margin-top: 0;
		}
	}

	/* -------------------------------------------------------------------------
	 * Theme Overrides - Twenty twenty
	 * ------------------------------------------------------------------------- */

	&.tribe-theme-twentytwenty {

		.entry-content .tribe-tickets__registration {
			max-width: 960px !important;
		}
	}
}

/* Theme overrides */
.page-tribe-attendee-registration .wrap {
	padding-left: var(--tec-spacer-4);
	padding-right: var(--tec-spacer-4);
}
